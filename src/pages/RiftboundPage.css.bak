/* League of Legends / Riftbound Theme */
:root {
  --rift-primary: #0AC8B9;
  --rift-secondary: #C89B3C;
  --rift-dark: #010A13;
  --rift-dark-blue: #0A1428;
  --rift-blue: #1E2328;
  --rift-light-blue: #1E282D;
  --rift-gold: #C8AA6E;
  --rift-cyan: #0AC8B9;
  --rift-text: #F0E6D2;
  --rift-text-dim: #A09B8C;

  /* Rarity colors */
  --rift-common: #6c757d;
  --rift-uncommon: #28a745;
  --rift-rare: #007bff;
  --rift-showcase: #C89B3C;
}

.riftbound-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--rift-dark) 0%, var(--rift-dark-blue) 50%, var(--rift-blue) 100%);
  color: var(--rift-text);
  font-family: 'Segoe UI', system-ui, sans-serif;
  padding-bottom: 50px;
  position: relative;
  overflow-x: hidden;
}

.riftbound-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 50%, rgba(10, 200, 185, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(200, 155, 60, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.riftbound-container > * {
  position: relative;
  z-index: 1;
}

/* Loading */
.riftbound-container.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20px;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(10, 200, 185, 0.2);
  border-top-color: var(--rift-cyan);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Header and Stats Container */
.riftbound-container .header-stats-container {
  display: flex;
  gap: 2rem;
  align-items: center;
  margin-bottom: 2rem;
  margin-left: -1rem;
  margin-right: -1rem;
  padding: 2rem 1rem;
  background: var(--rift-blue);
  border-top: 3px solid var(--rift-cyan);
  border-bottom: 3px solid var(--rift-cyan);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.riftbound-container .back-button {
  color: var(--rift-text);
  text-decoration: none;
  font-size: 1rem;
  font-weight: 600;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  background: var(--rift-light-blue);
  border: 1px solid var(--rift-cyan);
  transition: all 0.3s ease;
  white-space: nowrap;
}

.riftbound-container .back-button:hover {
  background: var(--rift-cyan);
  color: var(--rift-dark);
  transform: translateX(-4px);
}

.riftbound-container .header {
  flex: 1;
  text-align: left;
}

.riftbound-container .header h1 {
  font-size: 2.8rem;
  font-weight: 700;
  color: var(--rift-cyan);
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  margin-bottom: 0.5rem;
  letter-spacing: 1px;
}

.riftbound-container .header p {
  color: var(--rift-text-dim);
  font-size: 1.1rem;
  font-weight: 400;
}

.riftbound-container .stats {
  display: flex;
  gap: 2rem;
  align-items: center;
}

.riftbound-container .stat-item {
  text-align: center;
}

.riftbound-container .stat-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--rift-gold);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  margin-bottom: 0.25rem;
}

.riftbound-container .stat-label {
  font-size: 0.9rem;
  color: var(--rift-text-dim);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Filters */
.filters-section {
  max-width: 1400px;
  margin: 0 auto 30px;
  padding: 0 20px;
}

.search-bar {
  margin-bottom: 20px;
}

.search-input {
  width: 100%;
  padding: 15px 20px;
  background: rgba(30, 35, 40, 0.8);
  border: 2px solid rgba(10, 200, 185, 0.3);
  border-radius: 8px;
  color: var(--rift-text);
  font-size: 1rem;
  transition: all 0.3s;
}

.search-input:focus {
  outline: none;
  border-color: var(--rift-cyan);
  box-shadow: 0 0 20px rgba(10, 200, 185, 0.3);
}

.search-input::placeholder {
  color: var(--rift-text-dim);
}

.type-filters {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.type-btn {
  flex: 1;
  min-width: 120px;
  padding: 12px 24px;
  background: rgba(30, 35, 40, 0.8);
  border: 2px solid rgba(10, 200, 185, 0.3);
  border-radius: 8px;
  color: var(--rift-text);
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.type-btn:hover {
  border-color: var(--rift-cyan);
  background: rgba(10, 200, 185, 0.1);
  transform: translateY(-2px);
}

.type-btn.active {
  background: var(--rift-cyan);
  color: var(--rift-dark);
  border-color: var(--rift-cyan);
  box-shadow: 0 0 20px rgba(10, 200, 185, 0.5);
}

.dropdown-filters {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
}

.filter-select {
  padding: 12px 16px;
  background: rgba(30, 35, 40, 0.8);
  border: 2px solid rgba(10, 200, 185, 0.3);
  border-radius: 8px;
  color: var(--rift-text);
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s;
}

.filter-select:hover,
.filter-select:focus {
  outline: none;
  border-color: var(--rift-cyan);
  box-shadow: 0 0 15px rgba(10, 200, 185, 0.3);
}

.filter-select option {
  background: var(--rift-blue);
  color: var(--rift-text);
}

/* No Results */
.no-results {
  text-align: center;
  padding: 80px 20px;
  max-width: 600px;
  margin: 0 auto;
  color: var(--rift-text);
}

.no-results-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  opacity: 0.5;
}

.no-results h3 {
  font-size: 1.8rem;
  color: var(--rift-cyan);
  margin-bottom: 10px;
}

.no-results p {
  font-size: 1.1rem;
  color: var(--rift-text-dim);
}

/* Cards Grid */
.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 25px;
  padding: 0 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.card-item {
  background: rgba(30, 35, 40, 0.8);
  border: 2px solid rgba(10, 200, 185, 0.2);
  border-radius: 12px;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s;
  backdrop-filter: blur(5px);
}

.card-item:hover {
  transform: translateY(-8px) scale(1.02);
  border-color: var(--rift-cyan);
  box-shadow: 0 10px 40px rgba(10, 200, 185, 0.4);
}

.card-item.champion {
  border-color: rgba(200, 155, 60, 0.4);
}

.card-item.champion:hover {
  border-color: var(--rift-gold);
  box-shadow: 0 10px 40px rgba(200, 155, 60, 0.4);
}

/* Cartes non possédées */
.riftbound-container .card-item.not-owned {
  opacity: 0.5;
}

.riftbound-container .card-item.not-owned .card-image {
  filter: grayscale(100%);
}

.riftbound-container .card-item.not-owned:hover {
  opacity: 0.7;
}

.riftbound-container .card-item.not-owned .quantity-badge {
  display: none;
}

.card-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 140%;
  background: rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.riftbound-container .quantity-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: var(--rift-cyan);
  color: var(--rift-dark);
  font-weight: bold;
  font-size: 1.1rem;
  padding: 0.4rem 0.8rem;
  border-radius: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
  z-index: 2;
  border: 2px solid var(--rift-gold);
}

.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-rarity-badge {
  position: absolute;
  top: 10px;
  right: 10px;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  letter-spacing: 1px;
}

.card-rarity-badge.common {
  background: var(--rift-common);
}

.card-rarity-badge.uncommon {
  background: var(--rift-uncommon);
}

.card-rarity-badge.rare {
  background: var(--rift-rare);
}

.card-rarity-badge.showcase {
  background: var(--rift-showcase);
  box-shadow: 0 0 10px rgba(200, 155, 60, 0.5);
}

.card-info {
  padding: 15px;
}

.card-name {
  margin: 0 0 5px 0;
  font-size: 1rem;
  font-weight: 700;
  color: var(--rift-text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-id {
  margin: 0 0 10px 0;
  font-size: 0.85rem;
  color: var(--rift-text-dim);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.card-meta {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  font-size: 0.85rem;
}

.card-color {
  padding: 4px 8px;
  border-radius: 4px;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.1);
}

.card-color.color-fury { background: rgba(220, 53, 69, 0.3); color: #dc3545; }
.card-color.color-calm { background: rgba(13, 202, 240, 0.3); color: #0dcaf0; }
.card-color.color-mind { background: rgba(111, 66, 193, 0.3); color: #6f42c1; }
.card-color.color-body { background: rgba(25, 135, 84, 0.3); color: #198754; }
.card-color.color-chaos { background: rgba(253, 126, 20, 0.3); color: #fd7e14; }
.card-color.color-order { background: rgba(255, 193, 7, 0.3); color: #ffc107; }

.card-cost,
.card-might {
  padding: 4px 8px;
  background: rgba(10, 200, 185, 0.2);
  border-radius: 4px;
  color: var(--rift-cyan);
  font-weight: 600;
}

/* Scroll to top button */
.riftbound-container .scroll-top-btn {
  position: fixed;
  bottom: 2rem;
  right: 6rem;
  width: 50px;
  height: 50px;
  background: var(--rift-cyan);
  color: var(--rift-dark);
  border: none;
  border-radius: 50%;
  font-size: 1.5rem;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 4px 12px rgba(10, 200, 185, 0.4);
  transition: all 0.3s ease;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.riftbound-container .scroll-top-btn:hover {
  background: var(--rift-gold);
  transform: translateY(-4px);
  box-shadow: 0 6px 16px rgba(10, 200, 185, 0.6);
}

.riftbound-container .scroll-top-btn:active {
  transform: translateY(-2px);
}

/* Floating cart button */
.riftbound-container .floating-cart-btn {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 50px;
  height: 50px;
  background: var(--rift-cyan);
  color: var(--rift-dark);
  border: none;
  border-radius: 50%;
  font-size: 1.5rem;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 4px 12px rgba(10, 200, 185, 0.4);
  transition: all 0.3s ease;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.riftbound-container .floating-cart-btn:hover {
  background: var(--rift-gold);
  transform: translateY(-4px);
  box-shadow: 0 6px 16px rgba(10, 200, 185, 0.6);
}

.riftbound-container .floating-cart-btn:active {
  transform: translateY(-2px);
}

.riftbound-container .cart-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: #dc3545;
  color: white;
  border-radius: 50%;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
  font-weight: bold;
  border: 2px solid var(--rift-dark);
}

/* Cart Panel Styles */
.riftbound-container .cart-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(1, 10, 19, 0.8);
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.riftbound-container .cart-panel {
  position: fixed;
  top: 0;
  right: -400px;
  width: 400px;
  height: 100vh;
  background: var(--rift-blue);
  border-left: 3px solid var(--rift-cyan);
  box-shadow: -4px 0 20px rgba(0, 0, 0, 0.5);
  transition: right 0.3s ease;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.riftbound-container .cart-panel-open {
  right: 0;
}

.riftbound-container .cart-header {
  padding: 1.5rem;
  background: var(--rift-light-blue);
  border-bottom: 2px solid var(--rift-cyan);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.riftbound-container .cart-header h2 {
  margin: 0;
  color: var(--rift-cyan);
  font-size: 1.5rem;
}

.riftbound-container .cart-close-btn {
  background: none;
  border: none;
  color: var(--rift-text);
  font-size: 2rem;
  cursor: pointer;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s;
}

.riftbound-container .cart-close-btn:hover {
  background: rgba(220, 53, 69, 0.2);
  color: #dc3545;
}

.riftbound-container .cart-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2rem;
  color: var(--rift-text-dim);
  text-align: center;
}

.riftbound-container .cart-summary {
  padding: 1rem 1.5rem;
  background: rgba(10, 200, 185, 0.1);
  border-bottom: 1px solid rgba(10, 200, 185, 0.3);
  color: var(--rift-cyan);
  font-weight: 600;
}

.riftbound-container .cart-items {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.riftbound-container .cart-item {
  background: var(--rift-light-blue);
  border: 1px solid rgba(10, 200, 185, 0.3);
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 1rem;
}

.riftbound-container .cart-item-header {
  display: flex;
  justify-content: space-between;
  align-items: start;
  margin-bottom: 0.5rem;
}

.riftbound-container .cart-item-name {
  margin: 0;
  color: var(--rift-text);
  font-size: 1rem;
  flex: 1;
}

.riftbound-container .cart-item-remove {
  background: rgba(220, 53, 69, 0.2);
  border: none;
  color: #dc3545;
  font-size: 1.5rem;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s;
}

.riftbound-container .cart-item-remove:hover {
  background: #dc3545;
  color: white;
}

.riftbound-container .cart-item-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  margin-bottom: 0.75rem;
  font-size: 0.9rem;
}

.riftbound-container .cart-item-info {
  display: flex;
  justify-content: space-between;
  color: var(--rift-text-dim);
}

.riftbound-container .cart-item-label {
  color: var(--rift-cyan);
  font-weight: 600;
}

.riftbound-container .cart-item-quantity {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.riftbound-container .quantity-btn {
  width: 30px;
  height: 30px;
  border: 1px solid var(--rift-cyan);
  background: var(--rift-light-blue);
  color: var(--rift-cyan);
  border-radius: 4px;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.3s;
}

.riftbound-container .quantity-btn:hover:not(:disabled) {
  background: var(--rift-cyan);
  color: var(--rift-dark);
}

.riftbound-container .quantity-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.riftbound-container .quantity-input {
  width: 50px;
  padding: 0.25rem;
  text-align: center;
  background: var(--rift-dark-blue);
  border: 1px solid var(--rift-cyan);
  border-radius: 4px;
  color: var(--rift-text);
  font-size: 1rem;
}

.riftbound-container .quantity-max {
  color: var(--rift-text-dim);
  font-size: 0.9rem;
}

.riftbound-container .cart-actions {
  padding: 1rem;
  background: var(--rift-light-blue);
  border-top: 2px solid var(--rift-cyan);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.riftbound-container .cart-btn {
  padding: 0.75rem 1rem;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
}

.riftbound-container .cart-btn-primary {
  background: var(--rift-cyan);
  color: var(--rift-dark);
}

.riftbound-container .cart-btn-primary:hover {
  background: var(--rift-gold);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(10, 200, 185, 0.4);
}

.riftbound-container .cart-btn-secondary {
  background: rgba(220, 53, 69, 0.2);
  color: #dc3545;
  border: 1px solid #dc3545;
}

.riftbound-container .cart-btn-secondary:hover {
  background: #dc3545;
  color: white;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(1, 10, 19, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
}

.modal-content {
  background: linear-gradient(135deg, var(--rift-blue) 0%, var(--rift-dark-blue) 100%);
  border: 2px solid var(--rift-cyan);
  border-radius: 16px;
  max-width: 900px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 0 50px rgba(10, 200, 185, 0.5);
}

.modal-close {
  position: absolute;
  top: 15px;
  right: 15px;
  background: rgba(220, 53, 69, 0.8);
  border: none;
  color: white;
  font-size: 2rem;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s;
  z-index: 10;
}

.modal-close:hover {
  background: #dc3545;
  transform: rotate(90deg);
}

.modal-body {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
  padding: 30px;
}

.modal-image {
  width: 100%;
  border-radius: 12px;
  border: 2px solid rgba(10, 200, 185, 0.3);
  box-shadow: 0 0 30px rgba(10, 200, 185, 0.3);
}

.modal-info {
  color: var(--rift-text);
}

.modal-info h2 {
  margin-top: 0;
  color: var(--rift-gold);
  font-size: 1.8rem;
  text-shadow: 0 0 15px rgba(200, 155, 60, 0.5);
}

.modal-info p {
  margin: 10px 0;
  line-height: 1.6;
}

.modal-info strong {
  color: var(--rift-cyan);
}

.card-effect {
  margin-top: 20px;
  padding: 15px;
  background: rgba(10, 200, 185, 0.1);
  border-left: 3px solid var(--rift-cyan);
  border-radius: 4px;
}

.card-effect p {
  margin: 10px 0 0 0;
  white-space: pre-wrap;
  line-height: 1.6;
}

.riftbound-container .modal-add-to-cart-btn {
  margin-top: 1.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--rift-cyan);
  color: var(--rift-dark);
  border: none;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  width: 100%;
}

.riftbound-container .modal-add-to-cart-btn:hover {
  background: var(--rift-gold);
  transform: scale(1.02);
  box-shadow: 0 4px 15px rgba(200, 170, 110, 0.3);
}

/* Responsive */
@media (max-width: 768px) {
  .riftbound-container .header-stats-container {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .riftbound-container .header h1 {
    font-size: 2rem;
  }

  .riftbound-container .stats {
    width: 100%;
    justify-content: space-between;
  }

  .riftbound-container .stat-value {
    font-size: 1.5rem;
  }

  .type-filters {
    flex-direction: column;
  }

  .type-btn {
    min-width: 100%;
  }

  .cards-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
  }

  .modal-body {
    grid-template-columns: 1fr;
  }
}
